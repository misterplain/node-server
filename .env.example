# Copy this file to .env and fill in your secrets
# Never commit your real .env to git

# Core server
PORT=5000
NODE_ENV=development
MONGO_URI=mongodb+srv://user:pass@cluster.example.mongodb.net/dbname

# Third-party APIs
RAPID_API_KEY=your_rapid_api_key
PEXELS_API_KEY=your_pexels_key

# OAuth providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# JWT
ACCESS_TOKEN_SECRET=change_me_access
REFRESH_TOKEN_SECRET=change_me_refresh

# Cloudinary
CLOUD_NAME=
CLOUD_KEY=
CLOUD_KEY_SECRET=

# URLs
SERVER_URL=http://localhost:5000/mern-ecommerce
CLIENT_URL=http://localhost:3000

# Email (for nodemailer examples)
GMAIL_USER=
GMAIL_PASS=
